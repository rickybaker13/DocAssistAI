# AWS Bedrock — Claude inference (BAA-covered)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
BEDROCK_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0

# Presidio sidecar containers (same Docker network)
PRESIDIO_ANALYZER_URL=http://presidio-analyzer:5002
PRESIDIO_ANONYMIZER_URL=http://presidio-anonymizer:5001
PRESIDIO_MIN_SCORE=0.7
PRESIDIO_TIMEOUT_MS=5000

# faster-whisper
WHISPER_MODEL_SIZE=large-v3
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# CORS — comma-separated allowed origins
CORS_ORIGINS=https://www.docassistai.app,http://localhost:8080
