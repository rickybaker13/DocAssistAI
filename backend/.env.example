# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:8080

# AI Provider Configuration
# Options: "external" or "self-hosted"
AI_PROVIDER=external

# External AI Provider (if AI_PROVIDER=external)
# Options: "openai" or "openrouter"
EXTERNAL_AI_TYPE=openrouter
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_MODEL=openai/gpt-4-turbo-preview
# OR for OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4

# Self-Hosted LLM (if AI_PROVIDER=self-hosted)
# Options: "ollama", "vllm", "custom"
SELF_HOSTED_LLM_TYPE=ollama
SELF_HOSTED_LLM_URL=http://localhost:11434
SELF_HOSTED_LLM_MODEL=llama2

# HIPAA Compliance Settings
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_PATH=./logs/audit.log
ENABLE_PHI_REDACTION=false  # Set to true to redact PHI before sending to AI

# Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
